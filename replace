replace() {
    __last=
    while :; do
        IFS= read -r __in || __last=1
        __out=
        while [ "${__in}" != "${__in%%"${1}"*}" ]; do
            __out="${__out}${__in%%"${1}"*}${2}"
            __in="${__in#*"${1}"}"
        done
        echo -n "${__out}${__in}"
        [ -z "${__last}" ] || break
        echo 
    done
}

# demo
echo -n "Input string" | replace t T
